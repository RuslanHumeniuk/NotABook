<Window x:Class="NotABookWPF.Windows.AddEditBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotABookWPF.Windows"
        mc:Ignorable="d"
        Title="AddEditBook" Height="150" Width="300">
    <StackPanel Margin="10,10,10,10">
        <TextBlock Text="Title" Margin="10,0,10,0"/>
        <TextBox x:Name="BookTitleTextBox" Text="{Binding Title}" Margin="10,10,10,10"/>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="BtnCancelSave" Content="Cancel" Click="BtnCancelSave_Click" Margin="10,10,10,10" HorizontalAlignment="Center"/>
            <Button x:Name="BtnSaveBook" Content="Save" Click="BtnSaveBook_Click" Margin="10,10,10,10" HorizontalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</Window>
