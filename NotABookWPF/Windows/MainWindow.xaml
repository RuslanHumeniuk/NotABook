<Window x:Class="NotABookWPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu 
            Grid.Row="0"
            HorizontalAlignment="Stretch" VerticalAlignment="Top" Padding="10,0,10,0" Margin="1">
            <MenuItem Header="File">
                <MenuItem Header="Create book element">
                    <MenuItem x:Name="MenuItemCreateBook" Header="New book" Click="MenuItemCreateBook_Click"/>
                    <MenuItem x:Name="MenuItemCreateNote" Header="New note" Click="MenuItemCreateNote_Click"/>
                    <MenuItem x:Name="MenuItemCreateCategory" Header="New category" Click="MenuItemCreateCategory_Click"/>
                </MenuItem>
                <MenuItem Header="Syncronize"/>
                <Separator/>
                <MenuItem Header="Exit" Name="MenuItemExit" Click="MenuItemExit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo"/>
            </MenuItem>
            <MenuItem Header="About">
                <MenuItem Header="FAQ" Name = "MenuItemFAQ" Click="MenuItemFAQ_Click"/>
                <MenuItem Header="About" Name = "MenuItemAbout" Click="MenuItemAbout_Click"/>
            </MenuItem>
        </Menu>
        <ToolBar 
            Grid.Row="1"
            Height="Auto">
            <Button Name="BtnNewNote" Content="New note" Click="BtnNewNote_Click" Margin="10,0,10,0" Padding="10,0,10,0"/>
            <Separator/>
            <TextBox Foreground="LightGray" Margin="10,0,10,0" Padding="20,0,20,0" Text="Find note"/>
        </ToolBar>
        <Grid
            Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.8*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>     
            <Grid Grid.Column="0" Margin="5,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock 
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Padding="5"
                    Text="Current book is:"/>
                <TextBlock      
                    Grid.Row="1"
                    HorizontalAlignment="Center"                    
                    Name="TBCurrentBook" 
                    FontStretch="ExtraExpanded" 
                    FontStyle="Normal" 
                    FontWeight="ExtraBold"
                    FontSize="15"/>
                <TextBlock
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Padding="20,10,20,0"
                    Text="All books:"/>
                <ListView
                    Grid.Row="3"
                    x:Name="ListViewBooks"                           
                    SelectionChanged="ListViewBooks_SelectionChanged"                    
                    SelectionMode="Extended"                    
                    HorizontalContentAlignment="Stretch"
                    VerticalAlignment="Stretch"     
                    BorderBrush="White"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ScrollViewer.CanContentScroll="True"
                    >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Label  
                                Name="TBEditBookTitle" 
                                Content="{Binding Title}"                                      
                                LostFocus="TBEditBookTitle_LostFocus" 
                                MouseDoubleClick="TBEditBookTitle_MouseDoubleClick"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"                                    
                                >
                                <Label.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Name="MenuItemDeleteBook" Header="Delete book" CommandParameter="{Binding .}" Click="MenuItemDeleteBook_Click_1"/>
                                        <MenuItem Name="MenuItemEditBook" Header="Edit book" CommandParameter="{Binding .}" Click="MenuItemEditBook_Click"/>
                                        <MenuItem Name="MenuItemRemoveItems" Header="Remove notes" CommandParameter="{Binding .}" Click="MenuItemRemoveItems_Click"/>
                                    </ContextMenu>
                                </Label.ContextMenu>
                            </Label>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <Grid Grid.Column="1" Margin="5,0,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBox 
                    Grid.Row="0"
                    Name="TextBoxFindItem" 
                    Text="Find item" 
                    GotFocus="TextBoxFindItem_GotFocus" 
                    LostFocus="TextBoxFindItem_LostFocus" 
                    Margin="5"
                    Padding="5"
                    TextChanged="TextBoxFindItem_TextChanged"/>
                <StackPanel
                    Grid.Row="1">
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                        <Label Content="Count of notes: "/>
                        <Label FontStyle="Oblique" Name="TextBlockCountOfItems" HorizontalAlignment="Stretch"/>
                        <Label Content="from" Margin="10,0,0,0" HorizontalAlignment="Left"/>
                    </StackPanel>
                    <ComboBox
                        Name="ComboBoxCurrentBook"                    
                        SelectionChanged="ComboBoxCurrentBook_SelectionChanged"
                        IsEditable="True"
                        StaysOpenOnEdit="True"/>
                </StackPanel>
                <ListBox           
                    Grid.Row="2"                    
                        x:Name="ListBoxItems"                    
                        Margin="5,10,5,0"
                        MouseDoubleClick="ListBoxItems_MouseDoubleClick"                                   
                        MouseLeftButtonUp="ListBoxItems_MouseLeftButtonUp"                    
                        SelectionMode="Extended"
                        HorizontalContentAlignment="Stretch"   
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"                            
                        >
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Name="MenuItemInNotesRemoveNote" Header="Remove note" Command="{Binding .}" Click="MenuItemInNotesRemoveNote_Click"/>
                        </ContextMenu>
                    </ListBox.ContextMenu>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Background="WhiteSmoke" CanHorizontallyScroll="False">
                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                <StackPanel Background="White" CanHorizontallyScroll="False">
                                    <TextBlock Text="{Binding DateOfLastChanging}" FontStyle="Italic"/>
                                    <TextBlock Text="{Binding FirstTextContent.Content}" FontStretch="Expanded" TextWrapping="WrapWithOverflow"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Grid>

            <Grid Grid.Column="2" x:Name="StackPanelItemPanel" Margin="5" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.9*"/>
                    <RowDefinition Height="0.1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid 
                    Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>                    
                    <TextBox
                        Grid.Row="0"                        
                        Name="TBEditItemTitle" Text="{Binding Title}" FontStyle="Italic"/>
                    <StackPanel 
                        Grid.Row="1"                        
                        Orientation="Horizontal">
                        <TextBlock Text="Date of last changing: "/>
                        <TextBlock Name="TBDateOfLastChanging" Text="{Binding DateOfLastChanging}"/>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="2"                        
                        Orientation="Horizontal">
                        <TextBlock Text="Date of creating: "/>
                        <TextBlock Name="TBDateOfCreating" Text="{Binding DateOfCreating}"/>
                    </StackPanel>
                    <Grid
                        Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Expander
                            Grid.Column="0"
                            x:Name="CategoryExpander" ExpandDirection="Right" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.4*"/>
                                    <RowDefinition Height="0.4*"/>
                                    <RowDefinition Height="0.2*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Categories of this note:" HorizontalAlignment="Center"/>
                                    <ListBox Grid.Row="1" x:Name="CategoryInNoteListBox"
                                          MouseLeftButtonUp="CategoryInNoteListBox_MouseLeftButtonUp"   />
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="All categories:" HorizontalAlignment="Center"/>
                                    <ListView Grid.Row="1" x:Name="AllCategoriesListBox"
                                           MouseLeftButtonUp="AllCategoriesListBox_MouseLeftButtonUp"                                                                                       
                                           />
                                </Grid>
                                <Button Grid.Row="2"
                                    x:Name="BtnCreateCategory" 
                                    Content="Create new category" 
                                    Click="BtnCreateCategory_Click" 
                                    VerticalAlignment="Bottom" 
                                    Margin="5" />
                            </Grid>
                        </Expander>
                        <ScrollViewer
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            CanContentScroll="True"
                            VerticalScrollBarVisibility="Auto">
                            <Grid HorizontalAlignment="Stretch"                                    
                                Name="StackPanelContent"
                                MouseRightButtonUp="StackPanelContent_MouseRightButtonUp"                
                                >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>                                    
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Grid>
                <Button
                    Grid.Row="1"
                    Content="Додати зображення" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" Name="BtnAttachImage" Click="BtnAttachImage_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
