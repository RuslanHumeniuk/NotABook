<Window x:Class="NotABookWPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotABookWPF.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <StackPanel  Margin="1,1,1,1">

        <Menu HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="794" Margin="1,1,1,1">
            <MenuItem Header="File">
                <MenuItem Header="Create book element">
                    <MenuItem x:Name="MenuItemCreateBook" Header="New book" Click="MenuItemCreateBook_Click"/>
                    <MenuItem x:Name="MenuItemCreateNote" Header="New note" Click="MenuItemCreateNote_Click"/>
                    <MenuItem x:Name="MenuItemCreateCategory" Header="New category" Click="MenuItemCreateCategory_Click"/>
                </MenuItem>
                <MenuItem Header="Syncronize"/>
                <Separator/>
                <MenuItem Header="Exit" Name="MenuItemExit" Click="MenuItemExit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo"/>
            </MenuItem>
            <MenuItem Header="About">
                <MenuItem Header="FAQ" Name = "MenuItemFAQ" Click="MenuItemFAQ_Click"/>
                <MenuItem Header="About" Name = "MenuItemAbout" Click="MenuItemAbout_Click"/>
            </MenuItem>
        </Menu>
        <ToolBar Height="Auto">
            <Button Name="BtnNewNote" Content="New note" Click="BtnNewNote_Click"/>
            <Separator/>
            <TextBox Foreground="LightGray" Width="100" Text="Find note"/>
        </ToolBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.8*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.45*"/>
                <RowDefinition Height="0.45*"/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" Margin="5,5,5,5" Grid.RowSpan="3">
                <TextBlock Text="Current book is:"/>
                <TextBlock Name="TBCurrentBook" FontStretch="Expanded" FontStyle="Normal" FontWeight="ExtraBold"/>
                <ListView
                    x:Name="ListViewBooks"       
                    x:FieldModifier="public"
                    SelectionChanged="ListViewBooks_SelectionChanged"                    
                    SelectionMode="Single"
                    MouseDoubleClick="ListViewBooks_MouseDoubleClick"
                    HorizontalContentAlignment="Stretch">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <StackPanel.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Name="MenuItemDeleteBook" Header="Delete book" CommandParameter="{Binding .}" Click="MenuItemDeleteBook_Click_1"/>
                                        <MenuItem Name="MenuItemEditBook" Header="Edit book" CommandParameter="{Binding .}" Click="MenuItemEditBook_Click"/>
                                        <MenuItem Name="MenuItemRemoveItems" Header="Remove notes" CommandParameter="{Binding .}" Click="MenuItemRemoveItems_Click"/>
                                    </ContextMenu>
                                </StackPanel.ContextMenu>
                                <TextBox  
                                    Name="TBEditBookTitle" 
                                    Text="{Binding Title}" 
                                    IsEnabled="False" 
                                    LostFocus="TBEditBookTitle_LostFocus" 
                                    MouseDoubleClick="TBEditBookTitle_MouseDoubleClick"
                                    HorizontalAlignment="Stretch">
                                </TextBox>

                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <StackPanel Grid.RowSpan="3" Grid.Column="1" Margin="5,5,5,5">
                <TextBox Name="TextBoxFindItem" Text="Find item" GotFocus="TextBoxFindItem_GotFocus" LostFocus="TextBoxFindItem_LostFocus" Margin="0,0,0,0" TextChanged="TextBoxFindItem_TextChanged"/>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Count of notes: "/>
                        <TextBlock FontStyle="Oblique" Name="TextBlockCountOfItems"/>
                        <TextBlock Text=" from"/>
                    </StackPanel>
                    <ComboBox
                                Name="ComboBoxCurrentBook"                    
                                SelectionChanged="ComboBoxCurrentBook_SelectionChanged"
                                IsEditable="True"
                                StaysOpenOnEdit="True"/>
                </StackPanel>
                <ListBox                    
                    x:Name="ListBoxItems"
                    Height="Auto"                    
                    MouseDoubleClick="ListBoxItems_MouseDoubleClick"                                   
                    MouseLeftButtonUp="ListBoxItems_MouseLeftButtonUp"                    
                    SelectionMode="Single"
                    HorizontalContentAlignment="Stretch"     
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    >
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Name="MenuItemInNotesRemoveNote" Header="Remove note" Command="{Binding .}" Click="MenuItemInNotesRemoveNote_Click"/>
                        </ContextMenu>
                    </ListBox.ContextMenu>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Background="WhiteSmoke" CanHorizontallyScroll="False">
                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                <StackPanel Background="White" CanHorizontallyScroll="False">
                                    <TextBlock Text="{Binding DateOfLastChanging}" FontStyle="Italic"/>
                                    <TextBlock Text="{Binding FirstTextContent.Content}" FontStretch="Expanded" TextWrapping="WrapWithOverflow"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <StackPanel Grid.RowSpan="3" Grid.Column="2" x:Name="StackPanelItemPanel" Margin="5,5,5,5" Visibility="Collapsed">
                <StackPanel>
                    <TextBox Name="TBEditItemTitle" Text="{Binding Title}" FontStyle="Italic"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Date of last changing: "/>
                        <TextBlock Name="TBDateOfLastChanging" Text="{Binding DateOfLastChanging}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Date of creating: "/>
                        <TextBlock Name="TBDateOfCreating" Text="{Binding DateOfCreating}"/>
                    </StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="0.8*"/>
                        </Grid.ColumnDefinitions>                     
                        <Expander ExpandDirection="Right" Grid.RowSpan="3" Grid.Column="0">
                            <StackPanel>
                                <StackPanel Grid.Row="0">
                                    <TextBlock  Text="Categories of this note:" HorizontalAlignment="Center"/>
                                    <ListBox  
                                    VerticalAlignment="Stretch"
                                    x:Name="CategoryInNoteListBox"
                                          MouseLeftButtonUp="CategoryInNoteListBox_MouseLeftButtonUp"
                                          ItemsSource="{Binding Categories}"
                                          />
                                </StackPanel>
                                <StackPanel Grid.Row="1">
                                    <TextBlock  Text="All categories:" HorizontalAlignment="Center"/>
                                    <ListView  
                                    VerticalAlignment="Stretch"
                                    x:Name="AllCategoriesListBox"
                                           MouseLeftButtonUp="AllCategoriesListBox_MouseLeftButtonUp"                                            
                                          />
                                </StackPanel>
                                <Button 
                        VerticalAlignment="Bottom"
                        Grid.Row="1"
                        x:Name="BtnCreateCategory" 
                                    Content="Create new category" 
                                    Click="BtnCreateCategory_Click"                                     
                                    Margin="2" />
                            </StackPanel>
                        </Expander>
                        <ScrollViewer HorizontalAlignment="Stretch" Grid.RowSpan="3" Grid.Column="1">
                            <StackPanel 
                    Name="StackPanelContent"
                    MouseRightButtonUp="StackPanelContent_MouseRightButtonUp"      
                    />
                        </ScrollViewer>
                    </Grid>
                </StackPanel>
                <Button Content="Додати зображення" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" Name="BtnAttachImage" Click="BtnAttachImage_Click"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
