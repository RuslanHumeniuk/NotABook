<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotABook.Pages.ItemPages.AddEditItemPage"
             xmlns:app="clr-namespace:NotABook">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Title: " FontSize="Medium"/>
                <Entry HorizontalOptions="FillAndExpand" x:Name="entryTitle" Text="{Binding Title}"/>
            </StackLayout>

            <Label Text="Select Categories:" FontAttributes="Italic" FontSize="Medium"/>
            <Picker x:Name="PickerOfAllCategories"/>
            <Label Text="Selected Categories:" FontAttributes="Italic" FontSize="Medium"/>
            <Picker x:Name="PickerOfSelectedCategories"/>

            <Label Text="Description:" FontSize="Medium"/>
            <Editor x:Name="editorDescript" Text="{Binding Description}"/>
            <Button x:Name="BtnSave" Clicked="BtnSave_Clicked" Text="Save" HorizontalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>